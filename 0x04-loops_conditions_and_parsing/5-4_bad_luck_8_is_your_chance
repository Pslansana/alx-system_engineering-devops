#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the loop iteration

# Initialize counter
counter=1

# Loop from 1 to 10
while [ $counter -le 10 ]; do
    # Check for specific loop iterations
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    # Increment counter
    ((counter++))
done

